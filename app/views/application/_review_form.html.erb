<%= simple_form_for([@pet, @review]) do |f|%>
  <%= f.input :content  %>
  <div class="star-rating">
    <% 5.times do |i| %>
      <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
    <% end %>
  </div>
  <%= f.submit "Submit", class: "btn btn-info"%>
<% end %>

<h3>Create a new booking</h3>
<%= simple_form_for [ @pet, @booking ] do |f| %>
  <%# min="2017-06-01T08:30" %>
  <%= f.input :start_date, html5: true, wrapper_html: {class: 'date-wrapper'}, input_html: { value: DateTime.now.strftime("%Y-%m-%dT%l:%M"), min: DateTime.now.strftime("%Y-%m-%dT%l:%M") }, label: "Let's start playtime!" %>
  <%= f.input :return_date, html5: true, wrapper_html: {class: 'date-wrapper'}, input_html: { value: DateTime.now.strftime("%Y/%m/%dT%l:%M"), min: DateTime.now.strftime("%Y-%m-%dT%l:%M") }, label: "Time to say goodbye!" %>
  <%= f.submit value: "Rento this petto!", class: "btn btn-primary my-3" %>
<% end %>
<%= link_to 'Back', pets_path %>

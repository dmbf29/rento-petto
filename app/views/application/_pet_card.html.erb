<div class="card-trip">
  <%= cl_image_tag pet.photo.key %>
  <%= link_to '', pet_path(pet) %>
  <div class="card-trip-infos">
    <div>
      <h2><%= pet.name %></h2>
      <p>Pet owner <%= pet.user.first_name %> says:</p>
      <p>"<%= pet.description %>"</p>
      <% if pet.reviews.any? %>
        <% average = 0 %>
        <% pet.reviews.each do |review| %>
          <% average += review.rating %>
        <% end %>
        <i class="fas fa-star" style="color: #FD4;"></i> <%= (average/pet.reviews.length).round(1) %>
      <% else %>
        <p><i class="far fa-star"></i> No reviews for <%= pet.name %> yet</p>
      <% end %>
    </div>
    <h3 class="card-trip-pricing"><%= pet.price %>å††</h3>
    <%=cl_image_tag pet.user.photo.key, class: "card-trip-user avatar-bordered" %>
  </div>
</div>

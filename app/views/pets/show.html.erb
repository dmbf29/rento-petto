<div class="container my-5">
  <h1>
    <strong><%= @pet.name %></strong>
  </h1>
  <div class="row">
    <div class="col col-md-4">
      <%= cl_image_tag @pet.photo.key, class: 'w-100'%>
    </div>
    <div class="col col-md-4">
      <h2>
        <strong>Species:</strong>
        <%= @pet.species %>
      </h2>
      <p>
        <strong>Description:</strong>
        <%= @pet.description %>
      </p>
      <p>
        <strong>Owner's address:</strong>
        <%= @pet.location %>
      </p>
      <p>
        <strong>What is this pet like?:</strong>
        <%= @pet.character %>
      </p>
      <p>
        <strong>Price: Â¥</strong>
        <%= @pet.price %>
        <strong> / day</strong>
      </p>
      <%= link_to 'Back', pets_path, class: "btn btn-gradient"%>
    </div>
    <div class="col col-md-4">
      <div class="new-booking-card" data-controller="booking-picker">
        <%= render 'booking_form' %>
      </div>
    </div>
  </div>
  <% if policy(@pet).edit? %>
    <%= link_to 'Edit', edit_pet_path(@pet) %> |
  <% end %>
</div>
<div class="col col-md-4">
</div>

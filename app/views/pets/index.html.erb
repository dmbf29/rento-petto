<h1>RENTO PETTO</h1>

<p>Make Your Choice</p>

<p id="notice"><%= notice %></p>
<h1>Pets</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.price %></td>
        <td><%= pet.description %></td>
        <td><%= link_to 'Show', pet %></td>
        <% if policy(pet).edit? %>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <% end %>
        <% if policy(pet).destroy? %>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if policy(Pet).new? %>
  <%= link_to 'New Pet', new_pet_path %>
<% end %>

<div class="container">
  <h1>RENTO PETTO</h1>

  <p>Make Your Choice</p>

  <p id="notice"><%= notice %></p>
  <h1>Pets</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Pet name</th>
        <th>Rental Price per hour</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.price %></td>
          <td><%= pet.description %></td>
          <td><%= link_to 'Show', pet %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <% if policy(Pet).new? %>
    <%= link_to 'New Booking', new_pet_path %>
  <% end %>

</div>
